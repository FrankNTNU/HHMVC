            </div>
        </div>
        <div class="row">
            <div class="form-group col-4">
                <label>卡路里</label>
                <div>
                    @Html.EditorFor(model => model.Calories, new { htmlAttributes = new { @class = "form-control", @id = "Calories" } })
                    @Html.ValidationMessageFor(model => model.Calories, "", new { @class = "text-danger", @id = "Calories" })
