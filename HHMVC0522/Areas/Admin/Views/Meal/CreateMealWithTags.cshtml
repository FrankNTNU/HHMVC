                    @Html.EditorFor(model => model.Calcium, new { htmlAttributes = new { @class = "form-control", @id = "Ca" } })
                    @Html.ValidationMessageFor(model => model.Calcium, "", new { @class = "text-danger", @id = "Ca" })
