                    @Html.ValidationMessageFor(model => model.Na, "", new { @class = "text-danger", @id = "Na" })
                </div>
            </div>

            <div class="form-group col-3">
                <label>鉀</label>
                <div>
                    @Html.EditorFor(model => model.Potassium, new { htmlAttributes = new { @class = "form-control", @id = "K" } })
