@model List<DTO.GiftDTO> 

@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<h2>禮物頁面</h2>

<div>
    @Html.ActionLink("新增產品", "Creat")
</div>
<div class="card">
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <td>編號</td>
                    <td>名稱</td>
                    <td>圖片</td>
                    <td>所需點數</td>
                    <td>庫存量</td>
                    <td>活動期限</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ID</td>
                        <td>@item.Name</td>
                        <td><img src="~/Areas/Admin/Content/GiftImages/@item.Image" /></td>
                        <td>@item.Point</td>
                        <td>@item.Quantity</td>
                        <td>@item.Deadline</td>
                        <td>
                            @Html.ActionLink("修改", "Update", new { id = item.ID }) |
                            @Html.ActionLink("刪除", "Delete", new { id = item.ID }, new
                   {
                       onclicK = "return confirm('確定要刪除嗎?')"
                   })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    </div>

