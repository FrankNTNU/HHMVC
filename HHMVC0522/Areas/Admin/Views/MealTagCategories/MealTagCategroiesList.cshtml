@model IEnumerable<DTO.TagCategoryDetailDTO>

@{
    ViewBag.Title = "MealTagCategroiesList";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}
<script src="~/Areas/Admin/Content/JS/jquery.min.js"></script>
<link href="~/Areas/Admin/Content/CSS/adminlte.min.css" rel="stylesheet" />
<script src="~/Areas/Admin/Content/JS/pdfmake.min.js"></script>
<script src="~/Areas/Admin/Content/JS/bootstrap.bundle.min.js"></script>
<script src="~/Areas/Admin/Content/JS/moment.min.js"></script>
<script src="~/Areas/Admin/Content/JS/bs-custom-file-input.min.js"></script>
<script src="~/Areas/Admin/Content/JS/adminlte.min.js"></script>


<section class="content-header">
    <h1>所有標籤</h1>
    <ol class="breadcrumb float-sm-left">
        <li class="breadcrumb-item"><a>後臺頁面</a></li>
        <li class="breadcrumb-item"><a>飲食</a></li>
        <li class="breadcrumb-item active"><a>所有標籤</a></li>
    </ol>
</section>
<br />

<div class="card-footer">
    <button type="submit" class="btn btn-primary" onclick="window.location.href='/Admin/MealTagCategories/AddMealTagCategory'">新增標籤</button>
</div>

<div class="card">
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>標籤名稱</th>
                    <th>標籤圖片</th>
                    <th>查看餐點</th>
                    <th>修改</th>
                    <th>刪除</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            <img src="~/Areas/Admin/Content/TagCategoriesImages/@item.Image" style="width:100px;height:100px" />
                        </td>
                        <td>
                            @Html.ActionLink("查看餐點", "GetMealsByTag", new { id = item.ID })
                        </td>
                        <td align="center" valign="middle">
                            <a href="/Admin/MealTagCategories/UpadteTags/@item.ID">
                                <img src="~/Areas/Admin/Content/icon/update-icon.png" />
                            </a>
                        </td>
                        <td align="center" valign="middle">
                            <a href="#">
                                <img src="~/Areas/Admin/Content/icon/close-icon.png" onclick="AskQuestion('/Admin/MealTagCategories/Delete/', @item.ID)" />
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>標籤名稱</th>
                    <th>標籤圖片</th>
                    <th>查看餐點</th>
                    <th>修改</th>
                    <th>刪除</th>
                </tr>
            </tfoot>
        </table>
    </div>
    @Html.Partial("~/Areas/Admin/Views/Shared/ModalMessage.cshtml")
</div>>
<script src="~/Areas/Admin/Content/JS/DeleteRecord.js"></script>

