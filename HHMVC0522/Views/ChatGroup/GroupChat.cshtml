@section scripts {

    <script src="~/Scripts/jquery.signalR-2.4.2.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/Content/jquery-ui/jquery-ui-1.12.1.custom/jquery-ui.min.js"></script>
    <script>

        $(function () {

            $(window).on("unload", function () {
                $.connection.hub.stop();
            });

            var chat = $.connection.chatHub;

            chat.client.receiveFromGroupMember = function (connIds, userName, message) {

                let index = $.inArray($.connection.hub.id, connIds)

                write(userName, message, index != -1);
            }

            $.connection.hub.start().done(function () {

                //Set groupId When Return
                if ($("#groupId").val() == "") {

                    $.ajax({
                        url: "GetGroupId",
                        type: "POST",
                        data: {
                            connId: $.connection.hub.id
                        },
                        success: function (data) {
                            $("#groupId").val(data.GroupID);
                            $("#groupTitle").text(`聊天群組：${data.GroupName}`);
                        }
                    });
                }

                //todo Load Group Messages

                //New Group
                $("#newGroup").click(function () {

                    if ($("#groupId").val() != "") {
                        if (!confirm("確定離開目前群組嗎？")) {
                            return;
                        }
                    }

                    $("#groupDetail").dialog({
                        title: "聊天群",
                        modal: true,
                        open: function (event, ui) {
                            $('.ui-dialog .btnOK').addClass("primary")
                                .css("padding", "10px").css("border-radius", "5px")
                                .css("outline-color", "white");
                            $(this).parent().focus();
                        },
                        dialogClass: "no-close",
                        buttons: [{
                            text: "確認",
                            class: "btnOK",
                            click: function () {

                                if ($("#groupName").val() == "") {
                                    alert("請輸入聊天群名稱");
                                    return;
                                }

                                $.ajax({
                                    url: "NewGroup",
                                    type: "POST",
                                    data: {
                                        connId: $.connection.hub.id,
                                        groupName: $("#groupName").val(),
                                        weight1: $("#weight1").val(),
                                        weight2: $("#weight2").val(),
                                        preGroupId: $("#groupId").val()
                                    },
                                    success: function (data) {
                                        alert(data.Result);
                                        $("#groupName").val("");
                                        $("#weight1").val("");
                                        $("#weight2").val("");
                                        $("#groupId").val(data.GroupID);
                                        $("#groupTitle").text(`聊天群組：${data.GroupName}`);
                                    }
                                });

                                $("#groupDetail").dialog("close");
                            }
                        },
                        {
                            text: "取消",
                            class: "btnOK",
                            click: function () {
                                $("#groupDetail").dialog("close");
                            }
                        }]
                    });

                    $('.ui-dialog button').mousedown(function (e) {
                        e.preventDefault();
                    });
                });

                //Change Group
                $("body").on("click", ".chatGroup", function () {

                    if ($(this).attr("data-groupId") == $("#groupId").val()) {
                        alert("已在此群組");
                        return;
                    } else {
                        if ($("#groupId").val() != "" && !confirm("確定離開目前群組嗎？")) {
                            return;
                        }
                    }

                    $.ajax({
                        url: "AddToGroup",
                        type: "POST",
                        data: {
                            connId: $.connection.hub.id,
                            groupId: $(this).attr("data-groupId"),
                            groupName: $(this).attr("data-groupName"),
                            preGroupId: $("#groupId").val()
                        },
                        success: function (data) {
                            $("#groupId").val(data.GroupID);
                            $("#groupTitle").text(`聊天群組：${data.GroupName}`);
                            alert(data.Result);
                        }
                    });
                });
            });

            let IntervalID = setInterval(function () {

                //Refresh Group
                $.ajax({
                    url: "GetGroups",
                    type: "POST",
                    success: function (data) {

                        let docFrag = document.createDocumentFragment();

                        $.each(data, function (i, g) {
                            let cell = $("<div></div>").addClass("chatGroup").addClass("mb-2").addClass("button")
                                .attr("data-groupId", g.ID).attr("data-groupName", g.GroupName)
                                .text(`${g.GroupName} ${g.StartWeight}kg~${g.EndWeight}kg`);

                            if (g.ID == $("#groupId").val()) {
                                $(cell).addClass("primary");
                            }

                            $(docFrag).append(cell);
                        });

                        $("#groups").html("");
                        $("#groups").append(docFrag);
                    }
                });

                //Refresh Group Members
                if ($("#groupId").val() != "") {
                    $.ajax({
                        url: "GetGroupMembers",
                        type: "POST",
                        data: {
                            groupId: $("#groupId").val()
                        },
                        success: function (data) {

                            let docFrag = document.createDocumentFragment();

                            $.each(data, function (i, m) {

                                let cell = $("<div></div>").addClass("button").text(m);

                                $(docFrag).append(cell);
                            });

                            $("#members").html("");
                            $("#members").append(docFrag);
                        }
                    });
                }
            }, 3000);

            $("#sendmessage").click(function () {
                $.ajax({
                    url: "SendMessage",
                    type: "POST",
                    data: {
                        connId: $.connection.hub.id,
                        groupId: $("#groupId").val(),
                        message: $("#message").val()
                    }
                });
            });
        });

        function write(userName, message, isSelf) {

            let msg = $("<div></div>").text(`${userName}：${message}`);

            if (isSelf) {
                $(msg).addClass("self");
            } else {
                $(msg).addClass("others");
            }

            $("#chatbox").append(msg);
        }
        
