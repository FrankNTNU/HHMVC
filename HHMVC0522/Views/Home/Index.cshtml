
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}
@model DTO.LayoutDTO
<section id="intro">
    <div class="container">
        <div class="row">
            <div class="span6">
                <h3><strong><span class="highlight color">HealthHelper</span> 健康管理助手</strong></h3>
