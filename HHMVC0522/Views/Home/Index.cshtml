        <div class="row">
            <ul class="portfolio-area da-thumbs">
                @foreach (var item in Model.Posts)
                {
                    <li class="portfolio-item" data-id="id-0" data-type="web">
                        <div class="span4">
                            <div class="thumbnail">
                                <div class="image-wrapp">
                                    <a href="@Url.RouteUrl("PostDetail", new { @ID = item.ID})">
                                        <img src="~/Areas/Admin/Content/PostImages/@item.ImagePath" alt="Portfolio name" title="" />
                                    </a>
                                </div>
                                <div class="desc" style="height: 5em; overflow: hidden;">
                                    <h5 style="font-size:1.2em;"><i class="icon-file"></i> <strong>@item.Title</strong></h5>
                                    <p >@item.AddDate</p>
                                </div>
                            </div>

                        </div>
                    </li>
                }



            </ul>

        </div>

    </div>
</section>
