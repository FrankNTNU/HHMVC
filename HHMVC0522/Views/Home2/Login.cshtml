
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/HomeLayout2.cshtml";
}
@model DTO.UserDTO
<div id="main">
    <div class="inner">
        <!-- Header -->
        <div><p></p></div>
        <header class="major">
            <h2>
                登入
            </h2>
        </header>
        @Html.Partial("~/Areas/Admin/Views/Shared/MessageForm.cshtml")
        <form action="@Url.Action("Login")" method="post">
            <div class="row gtr-uniform">
                <div class="col-12">
                    <label>帳號</label>
                    @Html.ValidationMessageFor(x => x.UserName)
                    <input type="text" name="UserName" id="demo-name" value="" placeholder="登入帳號" />
                </div>
                <div class="col-12">
                    <label>密碼</label>
                    @Html.ValidationMessageFor(x => x.Password)
                    <input type="text" name="Password" id="demo-email" value="" placeholder="你的密碼" />
                </div>
                <!-- Break -->
                <!-- Break -->
                <div class="col-12">
                    <ul class="actions">
                        <li style="font-size:1.1em"><input type="submit" value="登入" class="primary" /></li>
                    </ul>
                </div>
            </div>
        </form>
    </div>
</div>
