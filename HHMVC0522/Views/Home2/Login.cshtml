
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/HomeLayout2.cshtml";
}
@model DTO.UserDTO
<div id="main">
    <div class="inner">
        <!-- Header -->
        <div><p></p></div>
        <header class="major">
            <p style="font-size:2em; margin-bottom:10px">
                <i class="far fa-user"></i> 登入
            </p>
        </header>
        @Html.Partial("~/Areas/Admin/Views/Shared/MessageForm.cshtml")
        <form action="@Url.Action("Login")" method="post">
            <div class="row">
                <div class="col-12">
                    @Html.ValidationMessageFor(x => x.UserName)
                    <br /><label>帳號</label>

                    <input type="text" name="UserName" id="demo-name" value="" placeholder="登入帳號" style="height:50px" />
                </div>
                <div class="col-12">
                    @Html.ValidationMessageFor(x => x.Password)
                    <br /><label>密碼</label>

                    <input type="text" name="Password" id="demo-email" value="" placeholder="你的密碼" style="height:50px" />
                </div>
                <!-- Break -->
                <!-- Break -->
                <div class="col-12">
                    <ul class="actions">
                        <li style="font-size:1.1em"><input type="submit" value="登入" class="primary" /></li>
                    </ul>
                </div>
            </div>
        </form>
    </div>
</div>
