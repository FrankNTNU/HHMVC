
@{
    ViewBag.Title = "WorkoutPreferences";
    Layout = "~/Views/Shared/HomeLayout2.cshtml";
}


@section Styles
{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/jquery-ui/jquery-ui-1.12.1.custom/jquery-ui.min.css" rel="stylesheet" />
    <style>
        .mainTitle {
            text-align: center;
            font-style: italic;
            font-size: 3em;
            font-weight: 500;
        }

        .myBox {
            /*border: solid 2px gray;
            border-radius: 10px;*/
            padding: 15px;
        }

        .myInnerBox {
            display: flex;
            flex-direction: column;
            border: solid 1px #f56a6a;
            border-radius: 0.9em;
            padding: 5px;
            box-shadow: 5px 5px 10px 5px #E0E0E0;
        }

        #mainDiv {
            width: 100%;
            margin: auto;
            margin-top: 16px;
            position: relative;
            /*width: 500px;*/
            /*top: 80px;*/
        }

        #mainRow {
            position: relative;
            left: 20px;
            width: 100%;
        }

        .innerRow {
            position: relative;
            left: 10px;
            padding: 10px;
        }

        .title {
            font-size: 2em;
            font-weight: 600;
            color: #f56a6a;
            text-align: center;
            border-bottom: solid 2px #f56a6a;
        }

        #wSource, #wTarget, #wcSource, #wcTarget {
            margin:10px;
            min-height: 300px;
        }

        #innerWcSource, #innerWcTarget, #innerWSource, #innerWTarget {
            display: flex;
            flex-wrap: wrap;
        }

        .item {
            font-size: 1.1em;
            font-weight: 500;
            line-height: 1.2em;
            display: inline-block;
            width: max-content;
            height: min-content;
            margin: 5px;
            padding: 10px;
            background-color: #2894FF;
            color: white;
            border-radius: 5px;
            cursor: pointer;
            float:left;
        }

        #innerWSource > .item, #innerWTarget > .item {
            border: solid 2px #2894FF;
            background-color: white;
            color: #2894FF;
            padding: 8px;
        }

        .item.highlight {
            font-size: 1.3em;
            font-weight: 600;
            background-color: #2894FF !important;
            color: white !important;
        }

        .drag {
            /*width: max-content;
            height: min-content;*/
            z-index: 100;
        }

        #divider {
            height: 4em;
            position:relative;
            left: 15px;
            padding: 0px;
        }

        #divider .arrowDown {
            display: flex;
            justify-content: center;
            align-items:center;
        }

        #divider > div > i {
            transform: scaleX(1.5);
            transform: scaleY(3);
            color: #f56a6a;
        }
    </style>
}
