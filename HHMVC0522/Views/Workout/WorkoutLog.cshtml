        #wlTable_wrapper {
            display: flex;
            flex-wrap: wrap;
        }

        .scheduleBox {
            display: flex;
            justify-content: center;
            padding: 0px;
        }

        .schedule {
            width: 100%;
            text-align: center;
            border: solid 2px plum;
            border-radius: 10px;
            font-weight: bold;
            min-height: 120px;
            margin: 5px;
            display: flex;
            align-items: flex-start;
            flex-wrap: wrap;
            padding: 5px;
        }

        .schedule.tomorrow {
            width: 70%;
        }

        .schedule > .item {
            border: solid 2px plum;
            border-radius: 10px;
            width: 10em;
            display: inline-block;
            margin-right: 5px;
            margin-top: 5px;
        }

        .schedule > .title {
            border-bottom: solid 2px plum;
            flex-basis: 100%;
            height: 2em;
        }

        @@media screen and (max-width:738px) {
            .schedule.tomorrow {
                width: 100%;
            }
        }

        .ui-timepicker-div dl { all:initial; display:flex; flex-wrap:wrap; align-items:center }
        .ui-timepicker-div dl dt { all:initial; width:30%; display:inline-block; margin-bottom:10px }
        .ui-timepicker-div dl dd { all:initial; width:60%; display:inline-block; margin-bottom:10px }

    </style>
}

