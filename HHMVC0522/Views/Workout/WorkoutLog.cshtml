        #mainRow {
            position: relative;
            left: 20px;
            width: 100%;
        }

        .innerRow {
            position: relative;
            left: 10px;
            padding: 10px;
        }

        label {
            display: inline-block;
            text-align: left;
        }

        #wHoursForNew, #wTimeForNew, #wHoursForEdit, #wTimeForEdit {
            display: inline-block;
        }

        #wNameForNew, #wNameForEdit {
            display: inline-block;
