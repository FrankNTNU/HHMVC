@using DAL
@model List<Workout>

@{
    ViewBag.Title = "WorkoutLog";
    Layout = "~/Views/Shared/HomeLayout2.cshtml";
}


@section Styles
{

    <link href="~/Content/jquery-ui/jquery-ui-1.12.1.custom/jquery-ui.min.css" rel="stylesheet" />
    @*<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.css">*@
    @*<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.10.24/r-2.2.7/datatables.min.css" />*@
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.24/r-2.2.7/datatables.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/jquery-ui-timepicker/jquery-ui-timepicker-addon.css" />
    <style>
        .myBox {
            border: solid 2px gray;
            border-radius: 10px;
            padding: 10px;
        }

        .operate {
            min-height: 200px;
            box-sizing: border-box;
        }

        #mainDiv {
            width: 75%;
            margin:auto;
            margin-top:80px;
            position:relative;
            /*width: 500px;*/
            /*top: 80px;*/
        }

        #mainRow {
            position: relative;
            left: 20px;
            width: 100%;
        }

        .innerRow {
            position: relative;
            left: 10px;
            padding: 10px;
        }

        label {
            display: inline-block;
            text-align: left;
        }

        #wHoursForNew, #wTimeForNew
        , #wHoursForEdit, #wTimeForEdit {
            display: inline-block;
        }

        #wNameForNew, #wNameForEdit {
            display: inline-block;
            width: 200px;
        }

        #new, #Edit, #Delete {
            float: right;
            font-size: 14px;
        }

        #wlTable_filter label input {
            display: inline-block;
            width: 120px;
            float: right;
        }

        #wlTable_filter label {
            display: flex;
            align-items: center;
            margin-left: 3px;
        }

        #wlTable_filter {
            /*margin-left: auto;*/
        }

        #wlTable_paginate {
            margin-left: auto;
        }

        #wlTable_wrapper {
            display: flex;
            flex-wrap: wrap;
        }
    </style>
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "wlForm" }))
{
    @Html.AntiForgeryToken()
}

<div id="mainDiv">
    <div id="mainRow" class="row">
        <div id="check" class="myBox operate col-4 col-12-medium col-12-small">
            <div id="checkRow" class="row innerRow">
            </div>
        </div>
        <div class="myBox operate col-4 col-6-medium col-12-small">
            <div class="form-group" style="margin-bottom:2px; width:100%; display:block">
                <label for="wNameForNew">運動項目</label>
                @Html.DropDownList("wNameForNew", new SelectList(Model, "ID", "Name"), new { @class = "form-control" })
            </div>
            <div style="display:block; line-height:3em; border-bottom:solid 2px #f56a6a; margin-bottom:5px">
                <span id="AlForNew"></span>，【<span id="WcForNew"></span>】類型
            </div>
            <div class="form-group" style="margin-bottom:2px; display:block">
                <label for="wTimeForNew">運動時間</label>
                <input type="text" class="form-control" id="wTimeForNew" style="width:160px; display:inline-block" autocomplete="off" />
            </div>
            <div class="form-group" style="margin-bottom:2px; display:block">
                <label for="wHoursForNew">運動多久</label>
                <input type="text" class="form-control" id="wHoursForNew" style="width:100px" placeholder="小時" />
            </div>
            <div id="new" class="button primary fit">新增</div>
        </div>
        <div class="myBox operate col-4 col-6-medium col-12-small">
            <div class="form-group" style="margin-bottom:2px; width:100%; display:block">
                <label for="wNameForEdit">運動項目</label>
                @Html.DropDownList("wNameForEdit", new SelectList(Model, "ID", "Name"), new { @class = "form-control" })
            </div>
            <div style="display:block; line-height:3em; border-bottom:solid 2px #f56a6a; margin-bottom:5px">
                <span id="AlForEdit"></span>，【<span id="WcForEdit"></span>】類型
            </div>
            <div class="form-group" style="margin-bottom:2px; display:block">
                <label for="wTimeForEdit">運動時間</label>
                <input type="text" class="form-control" id="wTimeForEdit" style="width:160px; display:inline-block" autocomplete="off" />
            </div>
            <div class="form-group" style="margin-bottom:2px; display:block">
                <label for="wHoursForEdit">運動多久</label>
                <input type="text" class="form-control" id="wHoursForEdit" style="width:100px" placeholder="小時" />
                <div style="display:inline-block">
                    <select id="wStatusForEdit">
                        <option value="4">預定中</option>
                        <option value="5">執行成功</option>
                        <option value="6">執行失敗</option>
                    </select>
                </div>
            </div>
            <div style="display:flex; column-gap:5px">
                <div id="Edit" class="button primary fit">修改</div>
                <div id="Delete" class="button primary fit">刪除</div>
            </div>
        </div>
        <div class="myBox col-12" style="min-height:150px; position:relative">
            <div class="row innerRow">
                <div class="col-2 col-6-medium col-12-small">1</div>
                <div class="col-2 col-6-medium col-12-small">2</div>
                <div class="col-2 col-6-medium col-12-small">3</div>
                <div class="col-2 col-6-medium col-12-small">4</div>
                <div class="col-2 col-6-medium col-12-small">5</div>
                <div class="col-2 col-6-medium col-12-small">6</div>
            </div>
        </div>
        <div class="myBox col-12">
            <table id="wlTable" class="display responsive nowrap" style="width:100%">
            </table>
        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript" src="~/Content/jquery-ui/jquery-ui-1.12.1.custom/jquery-ui.min.js"></script>
    @*<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.js"></script>*@
    @*<script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.24/r-2.2.7/datatables.min.js"></script>*@
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.24/r-2.2.7/datatables.min.js"></script>
    <script type="text/javascript" src="~/Content/moment-js/moment.min.js"></script>
    <script type="text/javascript" src="~/Content/jquery-ui-timepicker/jquery-ui-timepicker-addon.js"></script>
    <script>


        var minDate = null, maxDate = null; 
        var token = null;

        $(function () {

            var form = $('#wlForm');
            token = $('input[name="__RequestVerificationToken"]', form).val();

            let beforeEditStatus = null;

            //===================================================================
            //Initiate Datatable

            let table = $("#wlTable").DataTable({
                ajax: {
                    url: "GetWorkoutLog",
                    type: "post",
                    data: { __RequestVerificationToken: token },
                    dataSrc: ""
                },
                columns: [
                    { data: "ID", title: "ID" },
                    { data: "WorkoutID", title: "WorkoutID" },
                    { data: "EditTime", title: "編輯時間" },
                    { data: "Name", title: "運動項目" },
                    { data: "WorkoutTime", title: "運動時間" },
                    { data: "WorkoutHours", title: "運動多久" },
                    { data: "Status", title: "紀錄狀態" },
                ],
                columnDefs: [
                    {
                        targets: [0, 1],
                        visible: false,
                        searchable: false
                    },
                    {
                        targets: [2, 4],
                        render: function (date) {
                            return moment(date).format("MM月DD日yyyy年 HH:mm");
                        }
                    }
                ],
                order: [[2, "desc"]],
                lengthChange: false,
                pageLength: 10,
                responsive: true,
                initComplete: function () {

                    let wrap = document.createElement("div");
                    $(wrap).addClass("form-group").addClass("form-inline")
                        .css("display", "inline-block").css("float", "left")
                        .css("margin-bottom", "3px");

                    let lbl1 = document.createElement("label");
                    lbl1.innerHTML = "運動時間 從 ";
                    $(lbl1).css("margin", "3px");

                    let input1 = document.createElement("input");
                    input1.type = "text";
                    input1.className = "form-control";
                    input1.id = "start";
                    $(input1).css("display", "inline-block").css("width", "120px")
                        .attr("autocomplete", "off");

                    let lbl2 = document.createElement("label");
                    lbl2.innerHTML = " 到 ";
                    $(lbl2).css("margin", "3px");

                    let input2 = document.createElement("input");
                    input2.type = "text";
                    input2.className = "form-control";
                    input2.id = "end";
                    $(input2).css("display", "inline-block").css("width", "120px")
                        .attr("autocomplete", "off");;

                    $(wrap).append(lbl1).append(input1).append(lbl2).append(input2);
                    $(".dataTables_wrapper").prepend($(wrap));

                    $(input1).datepicker();
                    $(input2).datepicker();

                }
            });

            //==========================================================
            // New and Edit WorkoutLog DropdownList

            $("#wNameForNew").change(function () {
                let v = $(this).val();
                $.ajax({
                    url: "GetWorkoutAlWc",
                    type: "post",
                    data: {
                        __RequestVerificationToken: token,
                        wid: v
                    },
                    success: function (data) {
                        $("#AlForNew").text(data.Al);
                        $("#WcForNew").text(data.Wc);
                    }
                });
            });

            $("#wNameForEdit").change(function () {
                let v = $(this).val();
                $.ajax({
                    url: "GetWorkoutAlWc",
                    type: "post",
                    data: {
                        __RequestVerificationToken: token,
                        wid: v
                    },
                    success: function (data) {
                        $("#AlForEdit").text(data.Al);
                        $("#WcForEdit").text(data.Wc);
                    }
                });
            });

            $("#wNameForNew").change();
            $("#wNameForEdit").change();

            //=============================================================
            //Initiate DateTimePicker For New

            let today = new Date();
            today = new Date(today.toDateString());

            let ms = today.getTime() + 24 * 60 * 60 * 1000 * 7;
            let d7 = new Date(ms);

            $("#wTimeForNew").datetimepicker({
                minDate: new Date(),
                maxDate: d7
            });

            $("#wTimeForNew").change(function () {

                let wTime = new Date($(this).datetimepicker().val());

                if (wTime.toDateString() == today.toDateString()) {

                    $("#new").text("新增");
                    $("#new").attr("data-status", 5);

                } else {

                    $("#new").text("預定");
                    $("#new").attr("data-status", 4);
                }

            });

            //=============================================================
            //Initiate DateTimePicker For Edit

            ms = today.getTime() + 24 * 60 * 60 * 1000 * 1;
            let d1 = new Date(ms);

            ms = today.getTime() - 24 * 60 * 60 * 1000 * 7;
            let d7b = new Date(ms);

            $("#wTimeForEdit").datetimepicker({
                minDate: d7b,
                maxDate: d7
            });

            $("#wTimeForEdit").change(function () {

                let wTime = new Date($(this).datetimepicker().val());

                if (wTime.getTime() >= d1.getTime()) {

                    $("#wStatusForEdit").val(4).attr("disabled", true);
                    $("#wStatusForEdit option").eq(0).removeAttr("disabled");
                } else {
                    $("#wStatusForEdit").val(5).removeAttr("disabled");
                    $("#wStatusForEdit option").eq(0).attr("disabled", true);
                }

            });

            //=============================================================
            //DataTable Date Filter

            $("body").on("change", "#start", function () {
                minDate = $(this).datepicker("getDate");
                table.draw();
            });

            $("body").on("change", "#end", function () {
                maxDate = $(this).datepicker("getDate");
                maxDate.setDate(maxDate.getDate() + 1);
                table.draw();
            });

            //==============================================================
            //Show Workout Schedule

            $.ajax({
                url: "GetTodayWorkout",
                type: "post",
                data: {
                    __RequestVerificationToken: token
                },
                success: function (data) {

                    for (var i = 0; i < data.length; i++) {

                        let wsWrapper = document.createElement("div");
                        $(wsWrapper).css("display", "flex").css("align-items", "center")
                            .css("border-bottom", "solid 2px #f56a6a")
                            .css("padding-right", "1.5em")
                            .addClass("col-12").addClass("col-6-medium").addClass("col-12-small");

                        let wsDetail = document.createElement("div");
                        $(wsDetail).css("display", "inline-block");

                        let wt = document.createElement("span");
                        let w = document.createElement("span");
                        let wh = document.createElement("span");

                        $(wt).addClass("wsTime");
                        $(w).addClass("wsName");
                        $(wh).addClass("wsHours");

                        $(wt).text(moment(data[i].WorkoutTime).format("MM月DD日yyyy年 HH:mm"))
                        $(w).text(data[i].Name).css("margin-left", "2em");
                        $(wh).text(data[i].WorkoutHours + "hrs").css("margin-left", "1em");

                        $(wsDetail).append(wt).append("<br/>").append(w).append(wh);

                        let chkBtn = document.createElement("div");
                        $(chkBtn).addClass("button").addClass("primary");
                        $(chkBtn).attr("data-wlid", data[i].ID);
                        $(chkBtn).text("確認執行");
                        $(chkBtn).css("padding", "0px 5px").css("display", "inline-block")
                            .css("margin-left", "auto");

                        $(wsWrapper).append(wsDetail).append(chkBtn);

                        $("#checkRow").append(wsWrapper);

                    }
                    
                }
            });

            //=================================================================
            //Check Schedule
            $("body").on("click", "#checkRow .button", function () {

                if ($(this).attr("disabled")) {
                    return;
                }

                //console.log($(this).parent().find(".wsTime").text());
                //console.log($(this).parent().find(".wsName").text());
                //console.log($(this).parent().find(".wsHours").text());
                var option = $("#wNameForNew")
                    .children(`option:contains(${$(this).parent().find(".wsName").text()})`);

                let wlid = $(this).attr("data-wlid");

                let wTime = moment($(this).parent().find(".wsTime").text(), "MM月DD日yyyy年 HH:mm");

                let wHours = $(this).parent().find(".wsHours").text();
                wHours = wHours.substring(0, wHours.length - 3);

                //alert(wHours);
                //alert(moment(wTime).format("YYYY-MM-DD HH:mm"));

                $.ajax({
                    url: "EditWorkoutLog",
                    type: "post",
                    data: {
                        __RequestVerificationToken: token,
                        ID: wlid,
                        WorkoutID: option.val(),
                        WorkoutTime: moment(wTime).format("YYYY-MM-DD HH:mm"),
                        WorkoutHours: parseFloat(wHours),
                        StatusID: 5
                    },
                    success: function (data) {
                        alert(data.Result);
                        table.ajax.reload();

                        $("#checkRow .button[data-wlid=" + wlid + "]").removeClass("primary")
                            .text("執行成功").attr("disabled", true);
                    }
                });
                
            });

            //=================================================================
            //Add New WorkoutLog

            $("#new").click(function () {

                let status = $(this).attr("data-status");

                let wTime = new Date($("#wTimeForNew").datetimepicker().val());

                $.ajax({
                    url: "AddWorkoutLog",
                    type: "post",
                    data: {
                        __RequestVerificationToken: token,
                        WorkoutID: $("#wNameForNew").val(),
                        WorkoutTime: moment(wTime).format("YYYY-MM-DD HH:mm"),
                        WorkoutHours: parseFloat($("#wHoursForNew").val()),
                        StatusID: status
                    },
                    success: function (data) {
                        alert(data.Result);
                        table.ajax.reload();
                    }
                });
            });

            //===================================================================
            //Delete WorkoutLog
            $("#Delete").click(function () {

                if (!confirm("確定刪除嗎？")) {
                    return;
                }
                
                let wlid = $(this).attr("data-wlid");
                
                $.ajax({
                    url: "DeleteWorkoutLog",
                    type: "post",
                    data: {
                        __RequestVerificationToken: token,
                        ID: wlid
                    },
                    success: function (data) {
                        alert(data.Result);
                        table.ajax.reload();
                    }
                });
            });

            //===================================================================
            //Eidt Workout
            $("#Edit").click(function () {

                if ($(this).attr("disabled")) {
                    return;
                }

                let wlid = $(this).attr("data-wlid");

                let wTime = new Date($("#wTimeForEdit").datetimepicker().val());
                
                $.ajax({
                    url: "EditWorkoutLog",
                    type: "post",
                    data: {
                        __RequestVerificationToken: token,
                        ID: wlid,
                        WorkoutID: $("#wNameForEdit").val(),
                        WorkoutTime: moment(wTime).format("YYYY-MM-DD HH:mm"),
                        WorkoutHours: parseFloat($("#wHoursForEdit").val()),
                        StatusID: $("#wStatusForEdit").val()
                    },
                    success: function (data) {
                        alert(data.Result);
                        table.ajax.reload();

                        if (wTime.toDateString() == today.toDateString()
                            && beforeEditStatus == 4) {

                            if ($("#wStatusForEdit").val() == 5) {

                                $("#checkRow .button[data-wlid=" + wlid + "]").removeClass("primary")
                                    .text("執行成功").attr("disabled", true);

                            } else if ($("#wStatusForEdit").val() == 6) {

                                $("#checkRow .button[data-wlid=" + wlid + "]").removeClass("primary")
                                    .text("執行失敗").attr("disabled", true);
                            }
                            
                        }
                    }
                });
            });

            //===================================================================
            //Row Selection

            $('#wlTable').on('click', 'tr', function () {
                if ($(this).hasClass('selected')) {
                    $(this).removeClass('selected');
                }
                else {
                    table.$('tr.selected').removeClass('selected');
                    $(this).addClass('selected');
                }

                let rowData = table.row(this).data();

                let status = null;

                if (rowData.Status == "預定中") {
                    status = 4;
                } else if (rowData.Status == "執行成功") {
                    status = 5;
                } else if (rowData.Status == "執行失敗") {
                    status = 6;
                }

                beforeEditStatus = status;

                $("#wNameForEdit").val(rowData.WorkoutID);
                $("#wTimeForEdit").val(moment(rowData.WorkoutTime).format("MM/DD/yyyy HH:mm"));
                $("#wTimeForEdit").change();
                $("#wHoursForEdit").val(rowData.WorkoutHours);
                $("#wStatusForEdit").val(status);
                $('#Edit').attr("data-wlid", rowData.ID);
                $('#Delete').attr("data-wlid", rowData.ID);

                let workoutTime = new Date(moment(rowData.WorkoutTime).format("MM/DD/yyyy"));
                
                if (workoutTime.getTime() < d7b.getTime()
                    || workoutTime.getTime() > d7.getTime()) {

                    $("#wNameForEdit").attr("disabled", true);
                    $("#wTimeForEdit").attr("disabled", true);
                    $("#wHoursForEdit").attr("disabled", true);
                    $("#wStatusForEdit").attr("disabled", true);
                    $("#Edit").text("無法修改").removeClass("primary").attr("disabled", true);
                    
                } else {
                    $("#wNameForEdit").removeAttr("disabled", true);
                    $("#wTimeForEdit").removeAttr("disabled", true);
                    $("#wHoursForEdit").removeAttr("disabled", true);

                    if ($("#wStatusForEdit").val() != 4) {
                        $("#wStatusForEdit").removeAttr("disabled", true);
                    }

                    $("#Edit").text("修改").addClass("primary");
                }
            });
        });



        // Custom filtering function which will search data in column four between two values
        $.fn.dataTable.ext.search.push(
            function (settings, data, dataIndex) {
                var min = null;
                var max = null;

                if (minDate != null) {
                    min = minDate.getTime();
                }
                if (maxDate != null) {
                    max = maxDate.getTime();
                }

                var date = moment(data[4], "MM月DD日yyyy年").valueOf();

                if (
                    (min === null && max === null) ||
                    (min === null && date < max) ||
                    (min <= date && max === null) ||
                    (min <= date && date < max)
                ) {
                    return true;
                }
                return false;
            }
        );
    </script>
}

