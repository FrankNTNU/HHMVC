@using DAL
@model List<Workout>

@{
    ViewBag.Title = "WorkoutLog";
}

@section Styles
{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.css">
    <link rel="stylesheet" type="text/css" href="~/Content/jquery-ui-timepicker/jquery-ui-timepicker-addon.css" />
    <style>
        .box {
            border: solid 2px gray;
            border-radius: 10px;
            padding: 10px;
        }

        .operate {
            min-height: 200px;
            margin: 0 2px;
        }

        #wrapper {
            float:left;
        }
    </style>
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "wlForm" }))
{
    @Html.AntiForgeryToken()
}

<div class="box" style="width:100%; min-height:150px; margin-top:5px"></div>
<div style="display:flex; width:100%; margin:5px 0;" class="form-inline">
    <div class="box operate" style="width: 30%; "></div>
    <div class="box operate" style="width: 40%;">
        <div class="form-group" style="margin-bottom:2px; width:100%; height:80px">
            <label for="wName">運動項目</label>
            @Html.DropDownList("wName", new SelectList(Model, "ID", "Name"), new { @class="form-control" })<br/>
            <p style="line-height: 3em">
                <span id="Al"></span>，【<span id="Wc"></span>】類型
            </p>
        </div>
        <div class="form-group" style="margin-bottom:2px">
            <label for="wTime">運動時間</label>
            <input type="text" class="form-control" id="wTime" style="width:100px;" />
        </div>
        <div class="form-group" style="margin-bottom:2px">
            <label for="wHours">運動多久</label>
            <input type="text" class="form-control" id="wHours" style="width:100px;" />
        </div>
    </div>
    <div class="box operate" style="width: 40%;"></div>
</div>
<div class="box" style="width:100%; min-height:300px;">
    <table id="wlTable" class="display">
    </table>
</div>

@section Scripts
{
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.js"></script>
    <script type="text/javascript" src="~/Content/moment-js/moment.min.js"></script>
    <script type="text/javascript" src="~/Content/jquery-ui/jquery-ui-1.12.1.custom/jquery-ui.min.js"></script>
    <script type="text/javascript" src="~/Content/jquery-ui-timepicker/jquery-ui-timepicker-addon.js"></script>
    <script>

        $(function () {

            var form = $('#wlForm');
            var token = $('input[name="__RequestVerificationToken"]', form).val();

            let table = $("#wlTable").DataTable({
                ajax: {
                    url: "GetWorkoutLog",
                    type: "post",
                    data: { __RequestVerificationToken: token },
                    dataSrc: ""
                },
                columns: [
                    { data: "ID", title: "ID" },
                    { data: "EditTime", title: "編輯時間" },
                    { data: "Name", title: "運動項目" },
                    { data: "WorkoutTime", title: "運動時間" },
                    { data: "WorkoutHours", title: "運動多久" },
                    { data: "Status", title: "紀錄狀態" },
                ],
                columnDefs: [
                    {
                        targets: [0],
                        visible: false,
                        searchable: false
                    },
                    {
                        targets: [1, 3],
                        render: function (date) {
                            return moment(date).format("MM月DD日yyyy年 hh:mm");
                        }
                    }
                ],
                order: [[1, "desc"]],
                lengthChange: false,
                pageLength: 10,
                initComplete: function () {
                    $(".dataTables_wrapper").prepend("<div id='wrapper' class='form-group form-inline'><label id='picker'>123</label><input type='text' class='form-control' /></div>");
                }
            });

            $("#wName").change(function () {
                let v = $(this).val();
                $.ajax({
                    url: "GetWorkoutAlWc",
                    type: "post",
                    data: { wid: v },
                    success: function (data) {
                        $("#Al").text(data.Al);
                        $("#Wc").text(data.Wc);
                    }
                });
            });

            $("#wName").change();
        });
    </script>
}

