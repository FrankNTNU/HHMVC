            /*.schedule.tomorrow {
            width: 70%;
        }*/

            .schedule .item {
                border: solid 2px #2894FF;
                border-radius: 10px;
                width: 90%;
                display: inline-block;
                margin: auto;
            }

                .schedule .item:nth-child(2n+1) {
