            display: inline-block;
            text-align: left;
        }

        #innerSchedulekRow {
            display: flex;
            flex-direction:column;
            row-gap: 5px;
        }

        .scheduleBox {
            display: block;
            padding: 0px;
        }

        .schedule {
            width: 100%;
            text-align: center;
            border: solid 2px #2894FF;
            border-radius: 10px;
            font-weight: bold;
            margin: 0px;
            display: flex;
            flex-direction: row;
