@section Styles
{

    <link href="~/Content/jquery-ui/jquery-ui-1.12.1.custom/jquery-ui.min.css" rel="stylesheet" />
    
    <style>
        .mainTitle {
            position: relative;
            left: -5px;
            padding-left: 0;
        }

        .myBox {
            /*border: solid 2px gray;
            border-radius: 10px;*/
            padding: 15px;
        }

        .myInnerBox {
            border: solid 1px #f56a6a;
            border-radius: 0.9em;
            padding: 5px;
