@model IEnumerable<DAL.DietLog>

@{
    ViewBag.Title = "List";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            <div class=" col-md-10">
                @Html.Editor("txtQuery")<input type="submit" value="查詢" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<table id="tbList" class="table table-hover" style="width:60%">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimesOfDay.Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Portion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MealOption.Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.IsValid)
        </th>
        <th>
            delete
        </th>
    </tr>

    @foreach (var item in Model)
    {

        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimesOfDay.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Portion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MealOption.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.IsValid)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("刪除", "Delete", "HHDiet", new { id = item.ID }, new { OnClick = "return confirm('Are you sure to delete?')", @class = "btn btn-danger" })
            </td>
        </tr>
    }


</table>
